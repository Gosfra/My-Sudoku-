# My-Sudoku-<!DOCTYPE html>
<html lang="el">
<head>
<meta charset="UTF-8">
<title>My Sudoku</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<!-- Inline Manifest -->
<link rel="manifest" href="data:application/manifest+json,{
  'name':'My Sudoku',
  'short_name':'Sudoku',
  'start_url':'./index.html',
  'display':'standalone',
  'background_color':'#f0f8ff',
  'theme_color':'#4CAF50',
  'icons':[{'src':'data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACAAAAAgCAIAAAD8GO2jAAAAGElEQVR4nGNgGAWjYBSMglEwCkbEwAAGjgF/O3t3WgAAAABJRU5ErkJggg==','sizes':'192x192','type':'image/png'}]
}">

<meta name="theme-color" content="#4CAF50">

<style>
body{margin:0;padding:0;font-family:Arial;text-align:center;background:linear-gradient(to bottom right,#f0f8ff,#ffe4e1);}
table{border-collapse:collapse;margin:20px auto;width:90vw;max-width:500px;height:90vw;max-height:500px;background:rgba(255,255,255,0.85);border-radius:10px;}
td{border:1px solid #000;}
input{width:100%;height:100%;text-align:center;font-size:5vw;border:none;color:black;}
.pre-filled{font-weight:bold;color:black;}
.bold-border-top{border-top:3px solid #000;}
.bold-border-left{border-left:3px solid #000;}
.bold-border-right{border-right:3px solid #000;}
.bold-border-bottom{border-bottom:3px solid #000;}
button{font-size:16px;padding:10px 20px;margin:5px;border:none;border-radius:15px;background:#4CAF50;color:white;cursor:pointer;}
button:hover{background:#45a049;}
#score{font-size:18px;margin-top:10px;}
#free-points-banner{display:none;position:fixed;top:40%;left:50%;transform:translate(-50%,-50%);
background:#fffae6;border:3px solid #f5b301;border-radius:50%;width:200px;height:200px;line-height:200px;font-size:20px;font-weight:bold;color:#f57c00;z-index:9999;text-align:center;}
#free-points-banner iframe{width:180px;height:180px;border:0;}
.flash{animation:flashComplete 1.5s ease-in-out;}
@keyframes flashComplete{0%{background-color:rgba(255,255,255,0.8);}50%{background-color:#ffeb3b;}100%{background-color:rgba(255,255,255,0.8);}}
#free-points-banner.show{display:block;animation:bounceBanner 0.7s ease;}
@keyframes bounceBanner{0%{transform:translate(-50%,-50%) scale(0.5);}50%{transform:translate(-50%,-50%) scale(1.1);}100%{transform:translate(-50%,-50%) scale(1);}}
</style>
</head>

<body>
<h1>My Sudoku</h1>
<div id="score">Πόντοι: 0</div>

<div>
Επίπεδο: 
<select id="level">
<option value="easy">Εύκολο</option>
<option value="medium">Μεσαίο</option>
<option value="hard">Δύσκολο</option>
</select>
</div>

<table id="sudoku-board"></table>

<div>
<button onclick="newSudoku()">Νέο Sudoku</button>
<button onclick="checkSolution()">Έλεγξε</button>
<button onclick="useHint()">Hint (-10 πόντοι)</button>
</div>

<div id="daily-contest">
🔥 Daily Contest: Κορυφαίος παίκτης: <span id="top-player">Επισκέπτης</span> με <span id="top-score">0</span> πόντους
</div>

<div id="free-points-banner">
<iframe src="https://pagead2.googlesyndication.com/pagead/show_ads.js?client=ca-app-pub-1872407825418691&slotname=6292608156" scrolling="no"></iframe>
</div>

<script>
// Σταθερός χρήστης
let playerName = "Επισκέπτης";

// Sudoku solution template
let solutionTemplate=[
[5,3,4,6,7,8,9,1,2],[6,7,2,1,9,5,3,4,8],[1,9,8,3,4,2,5,6,7],
[8,5,9,7,6,1,4,2,3],[4,2,6,8,5,3,7,9,1],[7,1,3,9,2,4,8,5,6],
[9,6,1,5,3,7,2,8,4],[2,8,7,4,1,9,6,3,5],[3,4,5,2,8,6,1,7,9]
];

let sudokus=[],currentSudokuIndex=0,board=[],score=0;

// Generate sudokus
function generateSudoku(solution,level){let fill=0.5;if(level==='medium') fill=0.33;if(level==='hard') fill=0.22;return solution.map(r=>r.map(c=>Math.random()<fill?c:''));}
for(let i=0;i<1000;i++){sudokus.push({easy:generateSudoku(solutionTemplate,'easy'),medium:generateSudoku(solutionTemplate,'medium'),hard:generateSudoku(solutionTemplate,'hard')});}

function createBoard(){const table=document.getElementById('sudoku-board');table.innerHTML='';for(let i=0;i<9;i++){const row=document.createElement('tr');for(let j=0;j<9;j++){const cell=document.createElement('td');if(i===0||i===3||i===6)cell.classList.add('bold-border-top');if(j===0||j===3||j===6)cell.classList.add('bold-border-left');if(j===8)cell.classList.add('bold-border-right');if(i===8)cell.classList.add('bold-border-bottom');const input=document.createElement('input');input.type='text';input.maxLength=1;if(board[i][j]!==''){input.value=board[i][j];input.disabled=true;input.classList.add('pre-filled');}cell.appendChild(input);row.appendChild(cell);}table.appendChild(row);}}

function addPoints(p){score+=p;document.getElementById('score').innerText="Πόντοι: "+score;updateDailyContest();}
function flashBoard(){document.getElementById('sudoku-board').classList.add('flash');setTimeout(()=>{document.getElementById('sudoku-board').classList.remove('flash');},1500);}
function newSudoku(){let lvl=document.getElementById('level').value;currentSudokuIndex=(currentSudokuIndex+1)%sudokus.length;board=JSON.parse(JSON.stringify(sudokus[currentSudokuIndex][lvl]));createBoard();updateDailyContest();}
function checkSolution(){let correct=true;const table=document.getElementById('sudoku-board');for(let i=0;i<9;i++){for(let j=0;j<9;j++){const val=table.rows[i].cells[j].children[0].value;if(parseInt(val)!==solutionTemplate[i][j]) correct=false;}}if(correct){flashBoard();let lvl=document.getElementById('level').value;let points=10;if(lvl==='medium')points=20;if(lvl==='hard')points=30;addPoints(points);alert("🎉 Συγχαρητήρια! Ολοκλήρωσες το Sudoku! +"+points+" πόντοι 🎉");}else{alert("Κάποια κελιά είναι λάθος ή κενά. Συνέχισε!");}}
function useHint(){const table=document.getElementById('sudoku-board');if(score<10){showFreePointsBanner();return;}let empty=[];for(let i=0;i<9;i++){for(let j=0;j<9;j++){if(table.rows[i].cells[j].children[0].value==='')empty.push({i,j});}}if(empty.length===0){alert('Δεν υπάρχουν κενά κελιά για Hint!');return;}const c=empty[Math.floor(Math.random()*empty.length)];table.rows[c.i].cells[c.j].children[0].value=solutionTemplate[c.i][c.j];addPoints(-10);}
function showFreePointsBanner(){const b=document.getElementById('free-points-banner');b.classList.add('show');setTimeout(()=>{b.classList.remove('show');b.style.display='none';addPoints(10);alert("🎉 Πήρες 10 πόντους! Τώρα μπορείς να χρησιμοποιήσεις Hint.");},5000);}
function updateDailyContest(){const now=Date.now();const last=localStorage.getItem('dailyContestReset')||0;if(now-last>24*60*60*1000){localStorage.setItem('dailyContestReset',now);localStorage.setItem('topPlayer','Επισκέπτης');localStorage.setItem('topScore',0);}let tp=localStorage.getItem('topPlayer')||'Επισκέπτης';let ts=parseInt(localStorage.getItem('topScore'))||0;if(score>ts){tp=playerName;ts=score;localStorage.setItem('topPlayer',tp);localStorage.setItem('topScore',ts);}document.getElementById('top-player').innerText=tp;document.getElementById('top-score').innerText=ts;}
let touchstartX=0,touchendX=0;function checkSwipe(){if(touchendX<touchstartX-50)newSudoku();if(touchendX>touchstartX+50)prevSudoku();}document.addEventListener('touchstart',e=>{touchstartX=e.changedTouches[0].screenX;},false);document.addEventListener('touchend',e=>{touchendX=e.changedTouches[0].screenX;checkSwipe();},false);
newSudoku();

// Inline Service Worker
if('serviceWorker' in navigator){
  const swCode = `
    const cacheName='my-sudoku-cache-v1';
    const assetsToCache=['./'];
    self.addEventListener('install',e=>{e.waitUntil(caches.open(cacheName).then(c=>c.addAll(assetsToCache)));});
    self.addEventListener('fetch',e=>{e.respondWith(caches.match(e.request).then(r=>r||fetch(e.request)));});
  `;
  const blob = new Blob([swCode],{type:'application/javascript'});
  navigator.serviceWorker.register(URL.createObjectURL(blob)).then(()=>console.log('SW registered')).catch(err=>console.log(err));
}
</script>
</body>
</html>
